<% if resource.errors.any? %>
  <!-- Error container styled with Tailwind CSS classes for better UI presentation -->
  <div id="error_explanation" class="bg-red-50 text-red-700 p-4 rounded border border-red-300 mb-6">
    
    <!-- Heading displaying the error count and resource name (e.g., "User") -->
    <h2 class="leading-tight font-bold mb-3">
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>

    <!-- List of all error messages associated with the resource -->
    <ul class="list-disc pl-6">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li> <!-- Display each error message in a list item -->
      <% end %>
    </ul>
  </div>
<% end %>
