<%- if controller_name != 'sessions' %>
  <!-- Only show the "Log in" link if the current controller is not the 'sessions' controller (i.e., not on the login page) -->
  <p>
    <%= link_to "Log in", new_session_path(resource_name), class: "underline" %>
  </p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <!-- Show the "Sign up" link if the resource is registerable and not on the registrations page -->
  <p>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "underline" %>
  </p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <!-- Show the "Forgot your password?" link if the resource is recoverable and not on the passwords or registrations page -->
  <p>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "underline" %>
  </p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <!-- Show the "Didn't receive confirmation instructions?" link if the resource is confirmable and not on the confirmations page -->
  <p>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "underline" %>
  </p>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <!-- Show the "Didn't receive unlock instructions?" link if the resource is lockable and email unlock is enabled, and not on the unlocks page -->
  <p>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "underline" %>
  </p>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <!-- Show OmniAuth provider buttons for each configured provider -->
  <%- resource_class.omniauth_providers.each do |provider| %>
    <p>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "underline" %>
    </p>
  <% end %>
<% end %>
