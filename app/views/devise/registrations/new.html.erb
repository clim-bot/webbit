<% content_for :form_wrap do %>  
  <!-- Heading for the Sign Up form -->
  <h2 class="text-3xl font-bold mb-6">Sign up</h2>

  <!-- Devise form for signing up a new user -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <!-- Render error messages if there are any validation issues -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Username input field -->
    <div class="mb-6">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true, class: "input" %>
    </div>
    
    <!-- Email input field -->
    <div class="mb-6">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <!-- Password input field with minimum password length check -->
    <div class="mb-6">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    </div>

    <!-- Password confirmation input field -->
    <div class="mb-6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>

    <!-- Submit button to sign up -->
    <%= f.submit "Sign up", class: "btn btn-indigo w-full" %>
  
  <% end %>

  <!-- Render Devise shared links (e.g., sign in, password recovery) -->
  <div class="my-6">
    <%= render "devise/shared/links" %>
  </div>
<% end %>

<!-- Render the form wrapper for consistent layout -->
<%= render "devise/shared/form_wrap" %>
